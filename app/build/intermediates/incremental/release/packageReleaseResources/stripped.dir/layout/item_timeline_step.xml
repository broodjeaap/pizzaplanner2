<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <!-- Timeline indicator -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <View
            android:id="@+id/viewTimelineTop"
            android:layout_width="2dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="?attr/colorOutlineVariant"
            android:visibility="invisible" />

        <View
            android:id="@+id/viewTimelineDot"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/timeline_dot"
            android:backgroundTint="?attr/colorPrimary" />

        <View
            android:id="@+id/viewTimelineBottom"
            android:layout_width="2dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="?attr/colorOutlineVariant" />

    </LinearLayout>

    <!-- Step content -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewStepDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textStyle="bold"
                tools:text="Today, Dec 25" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="2dp">

                <TextView
                    android:id="@+id/textViewStepTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                    android:textStyle="bold"
                    android:textColor="?attr/colorPrimary"
                    tools:text="7:00 PM" />

                <TextView
                    android:id="@+id/textViewStepDuration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                    android:textColor="?android:attr/textColorSecondary"
                    tools:text="(30 min)" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/textViewStepName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
            tools:text="Mix ingredients" />

        <TextView
            android:id="@+id/textViewStepDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
            android:textColor="?android:attr/textColorSecondary"
            android:visibility="gone"
            tools:text="Combine flour, water, salt, and yeast"
            tools:visibility="visible" />

        <!-- Alarm indicator -->
        <LinearLayout
            android:id="@+id/layoutAlarmInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal"
            android:visibility="gone"
            tools:visibility="visible">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_alarm"
                app:tint="?attr/colorSecondary" />

            <TextView
                android:id="@+id/textViewAlarmInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                android:textColor="?attr/colorSecondary"
                tools:text="Alarm set" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
